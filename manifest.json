{
  "name": "Quick Tab Reorder",
  "description": "Move the active tab to the first position with a shortcut to pair with Cmd/Ctrl+1.",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "move-active-tab-to-1": {
      "description": "Move active tab to position 1 (first)",
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+MacCtrl+1"
      }
    },
    "move-active-tab-to-2": {
      "description": "Move active tab to position 2",
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+MacCtrl+2"
      }
    },
    "move-active-tab-to-3": {
      "description": "Move active tab to position 3",
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+MacCtrl+3"
      }
    },
    "move-active-tab-to-4": {
      "description": "Move active tab to position 4",
      "suggested_key": {
        "default": "Ctrl+Shift+4",
        "mac": "Command+MacCtrl+4"
      }
    }
  },
  "action": {
    "default_title": "Quick Tab Reorder"
  }
}

